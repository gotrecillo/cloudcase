!!!
%html
%head
  %title Cloudcase
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body
  .ui.inverted.menu.navigation-menu
    = link_to "CloudCase", root_path, id: "logo", :class => 'item'
    .right.menu
      - if user_signed_in?
        = link_to "Create Document", new_document_path, :class => 'item'
        = link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'item'

      - else
        = link_to "Log In", new_user_session_path, :class => 'item'

  %p.notice= notice
  %p.alert= alert

  = yield
